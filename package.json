{
  "name": "claude-from-obsidian",
  "version": "0.0.1",
  "description": "Obsidian plugin for Claude Shell communication",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "claude",
    "ai"
  ],
  "author": "mfranc",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "obsidian": "latest",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.6",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
